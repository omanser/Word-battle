<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.springboot.mapper.WordMapper">
    <select id="findWordById">
        select * from words where id = #{id}
    </select>
    <select id="findAllWordsByBookId">
        select * from words
        inner join wordbook_words
        on id = wordbook_words.word_id
        where wordbook_words.wordbook_id = #{bookId}
        limit 10
    </select>
</mapper>